---
interface Props {
  title: string;
  description: string;
  tags: string[];
  linkText: string;
  linkUrl: string;
}

const { title, description, tags, linkText, linkUrl } = Astro.props;
---

<div class="bg-[#111111] border border-gray-800 rounded-xl p-6 transition-all duration-300 transform hover:-translate-y-1 hover:border-green-500/50 hover:shadow-[0_0_20px_-5px_rgba(34,197,94,0.1)] flex flex-col h-full group">
    
    <h3 class="text-lg md:text-xl font-bold text-white mb-3 group-hover:text-green-400 transition-colors leading-tight">
        {title}
    </h3>
    
    <p class="text-gray-400 text-sm leading-relaxed mb-4 flex-grow">
        {description}
    </p>
    
    <div class="mb-4 bg-[#080808] p-4 rounded-lg border border-gray-800/60">
        <h4 class="text-xs font-bold text-gray-500 mb-2 uppercase tracking-widest flex items-center gap-2">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
            Key Achievements
        </h4>
        <ul class="space-y-1.5"> <slot /> 
        </ul>
    </div>

    <div class="flex flex-wrap gap-2 mb-4">
        {tags.map((tag) => (
            <span class="px-2 py-0.5 bg-[#1A1A1A] border border-blue-900/30 text-blue-300 rounded text-[10px] md:text-xs uppercase tracking-wide">
                {tag}
            </span>
        ))}
    </div>

    <div class="pt-3 border-t border-gray-800/50 mt-auto">
        <a href={linkUrl} target="_blank" class="text-sm font-bold text-white hover:text-green-400 transition flex items-center gap-2 group-hover:translate-x-1 duration-300">
            {linkText} <span class="text-green-500">-&gt;</span>
        </a>
    </div>
</div>