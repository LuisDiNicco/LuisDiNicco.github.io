---
interface Props {
  number: string;
  title: string;
}

const { number, title } = Astro.props;
---

<div class="flex items-center gap-4 mb-8 w-full">
    <div class="h-px bg-gray-800 flex-grow"></div>
    <h2 class="text-xl md:text-2xl font-mono text-gray-500 font-bold whitespace-nowrap">
        <span class="text-green-500">//</span> {number}. {title}
    </h2>
    <div class="h-px bg-gray-800 flex-grow"></div>
</div>