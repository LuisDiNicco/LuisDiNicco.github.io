---
// src/components/sections/Projects.astro
import { useTranslations } from '../../i18n';
import SectionTitle from '../ui/SectionTitle.astro';
import { PROJECTS } from '../../data/projects'; // <--- Importamos los datos

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="projects" class="scroll-mt-24 mb-24">
    
    <div class="mb-10 flex flex-col md:flex-row md:items-end justify-between gap-4">
        <SectionTitle number="04" title={t('proj.title')} />
        
        <!-- Terminal Filter -->
        <div class="flex items-center gap-2 text-sm font-mono bg-[#111] border border-gray-800 rounded-lg px-4 py-2 shadow-lg w-full md:w-auto">
            <span class="text-green-500">grep</span>
            <span class="text-gray-500">-i</span>
            <input 
                type="text" 
                id="project-tech-filter" 
                placeholder='"technology"' 
                class="bg-transparent border-none outline-none text-gray-300 w-full md:w-32 placeholder-gray-600 focus:w-full md:focus:w-48 transition-all duration-300"
            />
        </div>
    </div>
    
    <div class="bg-[#111] border border-gray-800 rounded-xl overflow-hidden shadow-2xl flex flex-col">
        
        <!-- Unified Terminal Header -->
        <div class="bg-[#1a1a1a] px-4 py-3 flex items-center gap-2 border-b border-gray-800 shrink-0">
            <div class="w-3 h-3 rounded-full bg-[#FF5F56]"></div>
            <div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
            <div class="w-3 h-3 rounded-full bg-[#27C93F]"></div>
            <span class="ml-3 text-xs text-gray-500 opacity-70 font-mono">luis@dev:~/projects</span>
        </div>

        <div class="flex flex-col md:flex-row h-[450px] md:h-[380px]">
            <!-- Sidebar: File Explorer -->
            <div class="w-full md:w-1/4 bg-[#161616] border-b md:border-b-0 md:border-r border-gray-800 flex flex-col h-48 md:h-full">
                <div class="p-4 flex-grow overflow-y-auto custom-scrollbar">
                    <div class="text-green-500 font-mono text-sm mb-4">$ ls -l</div>
                    <ul class="space-y-1 font-mono text-sm" id="project-list">
                        {PROJECTS.map((project, index) => (
                            <li class="relative group/item">
                                <button 
                                    class={`project-btn w-full text-left px-2 py-1.5 rounded flex items-center gap-2 transition-colors cursor-pointer ${index === 0 ? 'bg-green-500/10 text-green-400' : 'text-gray-400 hover:bg-gray-800/50 hover:text-gray-200'}`}
                                    data-index={index}
                                >
                                    <svg class="w-4 h-4 opacity-70 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                <span class="truncate">{project.shortName}.sh</span>
                            </button>
                        </li>
                    ))}
                </ul>
            </div>
        </div>

        <!-- Main Content: Project Summary -->
        <div class="w-full md:w-3/4 bg-[#111] flex flex-col relative overflow-hidden h-full">
            <div class="absolute inset-0 pointer-events-none bg-[linear-gradient(transparent_50%,rgba(0,0,0,0.1)_50%)] bg-[length:100%_4px] opacity-20 z-0"></div>
            
            <div class="p-6 md:p-8 flex-grow z-10 relative overflow-hidden" id="project-details">
                {PROJECTS.map((project, index) => (
                    <div class={`project-content ${index === 0 ? 'flex' : 'hidden'} animate-fade-in h-full flex-col transition-opacity duration-300`} data-index={index}>
                        <div class="text-gray-500 font-mono text-sm mb-5 shrink-0">
                            $ cat {project.shortName}.sh
                        </div>
                        <div class="flex items-start gap-3 mb-4 shrink-0">
                            <span class="text-green-500 font-mono mt-1">➜</span>
                            <h3 class="text-xl md:text-2xl font-bold text-gray-100 leading-tight font-mono">
                                {t(project.title)}
                            </h3>
                        </div>
                        
                        <div class="min-h-[4.5rem] mb-6 shrink-0">
                            <p class="text-gray-400 text-sm md:text-base leading-relaxed font-mono line-clamp-3">
                                {t(project.description)}
                            </p>
                        </div>

                        <div class="flex flex-wrap gap-2 mb-6 font-mono shrink-0 min-h-[2rem]">
                            {Object.values(project.stack).flat().slice(0, 5).map((tag) => (
                                <span class="px-2 py-1 bg-green-500/5 border border-green-500/20 text-green-400/80 rounded text-[10px] md:text-xs project-tag" data-tag={tag}>
                                    {tag}
                                </span>
                            ))}
                            {Object.values(project.stack).flat().length > 5 && (
                                <span class="px-2 py-1 text-gray-500 text-[10px] md:text-xs">+{Object.values(project.stack).flat().length - 5}</span>
                            )}
                        </div>
                        
                        <div class="flex-grow"></div>
                        
                        <div class="flex items-center gap-2 font-mono text-sm pt-4 border-t border-gray-800/50 shrink-0">
                            <span class="text-green-500">$</span>
                            <div class="flex flex-wrap gap-2 w-full">
                                {project.demoUrl && project.demoText && (
                                    <a href={project.demoUrl} target="_blank" class="text-gray-400 hover:text-white hover:bg-gray-800/50 px-3 py-2 rounded transition-colors flex items-center gap-2">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                                        <span>./demo.sh</span>
                                    </a>
                                )}
                                <a href={project.linkUrl} target="_blank" class="text-gray-400 hover:text-white hover:bg-gray-800/50 px-3 py-2 rounded transition-colors flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>
                                    <span>./code.sh</span>
                                </a>
                                <button class="expand-btn text-green-400 hover:text-green-300 hover:bg-green-500/10 px-4 py-2 rounded border border-green-500/30 transition-colors flex items-center gap-2 cursor-pointer shadow-[0_0_10px_rgba(34,197,94,0.1)] hover:shadow-[0_0_15px_rgba(34,197,94,0.2)] ml-2" data-index={index}>
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path></svg>
                                    <span>./details.sh</span>
                                </button>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<!-- Modal -->
<div id="project-modal" class="fixed inset-0 z-50 hidden items-center justify-center p-4 sm:p-6">
    <div class="absolute inset-0 bg-black/80 backdrop-blur-sm modal-backdrop cursor-pointer"></div>
    
    <div class="bg-[#111] border border-gray-800 rounded-xl shadow-2xl w-full max-w-5xl max-h-[90vh] flex flex-col relative z-10 overflow-hidden transform scale-95 opacity-0 transition-all duration-300" id="modal-content-container">
        
        <!-- Modal Header with Tabs -->
        <div class="bg-[#1a1a1a] flex flex-col border-b border-gray-800 shrink-0">
            <div class="px-4 py-3 flex items-center justify-between">
                <div class="flex items-center gap-2">
                    <div class="w-3 h-3 rounded-full bg-[#FF5F56] cursor-pointer modal-close hover:opacity-80"></div>
                    <div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
                    <div class="w-3 h-3 rounded-full bg-[#27C93F]"></div>
                    <span class="ml-3 text-xs text-gray-500 font-mono hidden sm:inline-block">~/project-details</span>
                </div>
                <button class="text-gray-500 hover:text-white modal-close cursor-pointer transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
            <!-- Tabs -->
            <div class="flex overflow-x-auto custom-scrollbar px-2 gap-1 pt-1">
                {PROJECTS.map((project, index) => (
                    <button 
                        class={`modal-tab px-4 py-2 text-xs sm:text-sm font-mono rounded-t-md border-t border-x transition-colors whitespace-nowrap cursor-pointer ${index === 0 ? 'bg-[#161616] border-gray-800 text-green-400' : 'bg-transparent border-transparent text-gray-500 hover:bg-[#111] hover:text-gray-300'}`} 
                        data-modal-tab={index}
                    >
                        {project.shortName}.sh
                    </button>
                ))}
            </div>
        </div>

        <!-- Modal Body -->
        <div class="p-6 md:p-8 overflow-y-auto custom-scrollbar flex-grow relative bg-[#161616]">
            <div class="absolute inset-0 pointer-events-none bg-[linear-gradient(transparent_50%,rgba(0,0,0,0.1)_50%)] bg-[length:100%_4px] opacity-20 z-0"></div>
            
            {PROJECTS.map((project, index) => (
                <div class={`modal-project-content ${index === 0 ? 'block' : 'hidden'} animate-fade-in relative z-10 transition-opacity duration-300`} data-modal-index={index}>
                    
                    <!-- Header Section: Title & Buttons -->
                    <div class="flex flex-col md:flex-row md:items-start justify-between gap-6 mb-8 border-b border-gray-800/50 pb-6">
                        <div class="flex-1">
                            <div class="text-gray-500 font-mono text-xs mb-3 flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M4 15V9a2 2 0 012-2h12a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2z"></path></svg>
                                ./execute {project.shortName}.sh
                            </div>
                            <h3 class="text-2xl md:text-4xl font-bold text-gray-100 mb-4 font-mono flex items-center gap-3">
                                <span class="text-green-500">➜</span>
                                {t(project.title)}
                            </h3>
                            <p class="text-gray-400 text-base md:text-lg font-mono leading-relaxed max-w-3xl border-l-2 border-green-500/30 pl-4">{t(project.description)}</p>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="flex flex-col gap-3 shrink-0 font-mono text-sm w-full sm:w-auto mt-2">
                            {project.demoUrl && project.demoText && (
                                <a href={project.demoUrl} target="_blank" class="group relative inline-flex items-center justify-center gap-2 px-6 py-2.5 bg-green-500/10 text-green-400 border border-green-500/30 rounded-lg overflow-hidden transition-all hover:bg-green-500/20 hover:scale-105 hover:shadow-[0_0_20px_rgba(34,197,94,0.2)] w-full">
                                    <div class="absolute inset-0 flex h-full w-full justify-center [transform:skew(-12deg)_translateX(-150%)] group-hover:duration-1000 group-hover:[transform:skew(-12deg)_translateX(150%)]">
                                        <div class="relative h-full w-8 bg-white/10"></div>
                                    </div>
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                                    <span class="relative z-10">{t(project.demoText)}</span>
                                </a>
                            )}
                            <a href={project.linkUrl} target="_blank" class="group relative inline-flex items-center justify-center gap-2 px-6 py-2.5 bg-[#1a1a1a] text-gray-300 border border-gray-700 rounded-lg overflow-hidden transition-all hover:bg-[#222] hover:text-white hover:border-gray-500 hover:scale-105 w-full">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>
                                <span class="relative z-10">{t(project.linkText)}</span>
                            </a>
                        </div>
                    </div>

                    <!-- Main Content Grid -->
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                        
                        <!-- Left Column: Image & Story -->
                        <div class="lg:col-span-2 space-y-6">
                            <!-- Image -->
                            <div class="bg-[#111] border border-gray-800/50 rounded-xl overflow-hidden relative group/img shadow-xl aspect-video">
                                {project.image ? (
                                    <>
                                        <img src={project.image} alt={t(project.title)} loading="lazy" class="w-full h-full object-cover opacity-80 group-hover/img:opacity-100 group-hover/img:scale-105 transition-all duration-700" />
                                        <div class="absolute inset-0 bg-gradient-to-t from-[#111] via-transparent to-transparent opacity-60"></div>
                                        <div class="absolute inset-0 bg-green-500/10 group-hover/img:bg-transparent transition-colors duration-500 pointer-events-none"></div>
                                    </>
                                ) : (
                                    <div class="h-full flex items-center justify-center text-gray-600 font-mono text-xs">[Image Placeholder]</div>
                                )}
                            </div>

                            <!-- Context & Solution -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div class="bg-[#111] p-5 rounded-xl border border-gray-800/50 shadow-inner relative overflow-hidden group/card hover:border-gray-700 transition-colors">
                                    <div class="absolute top-0 left-0 w-1 h-full bg-red-500/30"></div>
                                    <h4 class="text-red-400 font-mono text-sm mb-3 flex items-center gap-2 uppercase tracking-wider">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
                                        {t('proj.problem')}
                                    </h4>
                                    <p class="text-gray-400 text-sm leading-relaxed font-mono">
                                        {t(project.problem)}
                                    </p>
                                </div>
                                <div class="bg-[#111] p-5 rounded-xl border border-gray-800/50 shadow-inner relative overflow-hidden group/card hover:border-gray-700 transition-colors">
                                    <div class="absolute top-0 left-0 w-1 h-full bg-green-500/30"></div>
                                    <h4 class="text-green-400 font-mono text-sm mb-3 flex items-center gap-2 uppercase tracking-wider">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                        {t('proj.solution')}
                                    </h4>
                                    <p class="text-gray-400 text-sm leading-relaxed font-mono">
                                        {t(project.solution)}
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column: Tech & Features -->
                        <div class="space-y-6">
                            
                            <!-- Key Achievements (Compact) -->
                            <div class="bg-[#111] p-5 rounded-xl border border-gray-800/50 shadow-inner">
                                <h4 class="text-white font-mono text-sm mb-4 flex items-center gap-2 uppercase tracking-wider border-b border-gray-800 pb-3">
                                    <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path></svg>
                                    {t('proj.keys')}
                                </h4>
                                <ul class="space-y-3 font-mono text-xs">
                                    {project.achievements.map((achievementKey) => (
                                        <li class="flex items-start gap-3 text-gray-400 group/item">
                                            <span class="text-green-500 mt-0.5 shrink-0 group-hover/item:translate-x-1 transition-transform">▹</span>
                                            <span class="leading-relaxed group-hover/item:text-gray-300 transition-colors">{t(achievementKey)}</span>
                                        </li>
                                    ))}
                                </ul>
                            </div>

                            <!-- Tech Stack (Categorized) -->
                            <div class="bg-[#111] p-5 rounded-xl border border-gray-800/50 shadow-inner">
                                <h4 class="text-white font-mono text-sm mb-4 flex items-center gap-2 uppercase tracking-wider border-b border-gray-800 pb-3">
                                    <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>
                                    {t('proj.stack')}
                                </h4>
                                <div class="space-y-4 font-mono">
                                    {project.stack.frontend && (
                                        <div>
                                            <span class="text-[10px] text-gray-500 block mb-1.5 uppercase tracking-wider">Frontend</span>
                                            <div class="flex flex-wrap gap-1.5">
                                                {project.stack.frontend.map(tag => (
                                                    <span class="px-2 py-1 bg-[#1a1a1a] border border-gray-800 text-gray-300 rounded text-[10px] project-tag" data-tag={tag}>{tag}</span>
                                                ))}
                                            </div>
                                        </div>
                                    )}
                                    {project.stack.backend && (
                                        <div>
                                            <span class="text-[10px] text-gray-500 block mb-1.5 uppercase tracking-wider">Backend</span>
                                            <div class="flex flex-wrap gap-1.5">
                                                {project.stack.backend.map(tag => (
                                                    <span class="px-2 py-1 bg-[#1a1a1a] border border-gray-800 text-gray-300 rounded text-[10px] project-tag" data-tag={tag}>{tag}</span>
                                                ))}
                                            </div>
                                        </div>
                                    )}
                                    {project.stack.database && (
                                        <div>
                                            <span class="text-[10px] text-gray-500 block mb-1.5 uppercase tracking-wider">Database</span>
                                            <div class="flex flex-wrap gap-1.5">
                                                {project.stack.database.map(tag => (
                                                    <span class="px-2 py-1 bg-[#1a1a1a] border border-gray-800 text-gray-300 rounded text-[10px] project-tag" data-tag={tag}>{tag}</span>
                                                ))}
                                            </div>
                                        </div>
                                    )}
                                    {project.stack.tools && (
                                        <div>
                                            <span class="text-[10px] text-gray-500 block mb-1.5 uppercase tracking-wider">Tools & Others</span>
                                            <div class="flex flex-wrap gap-1.5">
                                                {project.stack.tools.map(tag => (
                                                    <span class="px-2 py-1 bg-[#1a1a1a] border border-gray-800 text-gray-300 rounded text-[10px] project-tag" data-tag={tag}>{tag}</span>
                                                ))}
                                            </div>
                                        </div>
                                    )}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</div>

<script>
    const buttons = document.querySelectorAll('.project-btn');
    const contents = document.querySelectorAll('.project-content');
    
    // Modal elements
    const expandBtns = document.querySelectorAll('.expand-btn');
    const modal = document.getElementById('project-modal');
    const modalContainer = document.getElementById('modal-content-container');
    const closeBtns = document.querySelectorAll('.modal-close');
    const modalBackdrop = document.querySelector('.modal-backdrop');
    const modalContents = document.querySelectorAll('.modal-project-content');
    const modalTabs = document.querySelectorAll('.modal-tab');

    // Tab switching logic (Main View)
    buttons.forEach(btn => {
        btn.addEventListener('click', () => {
            const index = btn.getAttribute('data-index');
            const fileName = btn.querySelector('span')?.textContent || 'script.sh';
            
            // Update buttons
            buttons.forEach(b => {
                b.classList.remove('bg-green-500/10', 'text-green-400');
                b.classList.add('text-gray-400');
            });
            btn.classList.remove('text-gray-400');
            btn.classList.add('bg-green-500/10', 'text-green-400');

            // Update content with fade effect
            contents.forEach(content => {
                if (content.getAttribute('data-index') === index) {
                    content.classList.remove('hidden');
                    // Pequeño delay para que el display:flex se aplique antes de la opacidad
                    setTimeout(() => {
                        content.classList.remove('opacity-0');
                        content.classList.add('opacity-100');
                    }, 10);
                } else {
                    content.classList.remove('opacity-100');
                    content.classList.add('opacity-0');
                    // Esperar a que termine la transición antes de ocultar
                    setTimeout(() => {
                        if (content.classList.contains('opacity-0')) {
                            content.classList.add('hidden');
                        }
                    }, 300);
                }
            });
        });
    });

    // Modal Tab switching logic
    const switchModalTab = (index: string | null) => {
        if (!index) return;

        // Update tabs
        modalTabs.forEach(tab => {
            if (tab.getAttribute('data-modal-tab') === index) {
                tab.classList.remove('bg-transparent', 'border-transparent', 'text-gray-500');
                tab.classList.add('bg-[#0a0a0a]', 'border-gray-800', 'text-green-400');
            } else {
                tab.classList.remove('bg-[#0a0a0a]', 'border-gray-800', 'text-green-400');
                tab.classList.add('bg-transparent', 'border-transparent', 'text-gray-500');
            }
        });

        // Update content with fade effect
        modalContents.forEach(content => {
            if (content.getAttribute('data-modal-index') === index) {
                content.classList.remove('hidden');
                setTimeout(() => {
                    content.classList.remove('opacity-0');
                    content.classList.add('opacity-100');
                }, 10);
            } else {
                content.classList.remove('opacity-100');
                content.classList.add('opacity-0');
                setTimeout(() => {
                    if (content.classList.contains('opacity-0')) {
                        content.classList.add('hidden');
                    }
                }, 300);
            }
        });
    };

    modalTabs.forEach(tab => {
        tab.addEventListener('click', () => {
            switchModalTab(tab.getAttribute('data-modal-tab'));
        });
    });

    // Modal logic
    const openModal = (index: string | null) => {
        if (!modal || !modalContainer || !index) return;
        
        switchModalTab(index);

        // Show modal with animation
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        // Small delay to allow display:flex to apply before animating opacity/transform
        setTimeout(() => {
            modalContainer.classList.remove('scale-95', 'opacity-0');
            modalContainer.classList.add('scale-100', 'opacity-100');
        }, 10);
        
        // Prevent body scroll
        document.body.style.overflow = 'hidden';
    };

    const closeModal = () => {
        if (!modal || !modalContainer) return;
        
        // Hide with animation
        modalContainer.classList.remove('scale-100', 'opacity-100');
        modalContainer.classList.add('scale-95', 'opacity-0');
        
        setTimeout(() => {
            modal.classList.remove('flex');
            modal.classList.add('hidden');
            // Restore body scroll
            document.body.style.overflow = '';
        }, 300);
    };

    expandBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            openModal(btn.getAttribute('data-index'));
        });
    });

    closeBtns.forEach(btn => {
        btn.addEventListener('click', closeModal);
    });

    if (modalBackdrop) {
        modalBackdrop.addEventListener('click', closeModal);
    }

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
            closeModal();
        }
    });

    // --- LÓGICA DE FILTRADO POR TECNOLOGÍA ---
    const techFilterInput = document.getElementById('project-tech-filter') as HTMLInputElement;
    const projectListItems = document.querySelectorAll('#project-list li');

    if (techFilterInput) {
        techFilterInput.addEventListener('input', (e) => {
            const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
            let firstVisibleIndex = -1;

            projectListItems.forEach((li) => {
                const btn = li.querySelector('.project-btn');
                if (!btn) return;
                
                const index = btn.getAttribute('data-index');
                if (!index) return;

                // Buscar en el contenido del proyecto correspondiente
                const content = document.querySelector(`.project-content[data-index="${index}"]`);
                if (!content) return;

                // Obtener todas las etiquetas de tecnología de este proyecto
                const tags = Array.from(content.querySelectorAll('.project-tag')).map(tag => tag.textContent?.toLowerCase() || '');
                
                // Verificar si alguna etiqueta coincide con la búsqueda
                const matches = searchTerm === '' || tags.some(tag => tag.includes(searchTerm));

                if (matches) {
                    li.style.display = 'block';
                    if (firstVisibleIndex === -1) {
                        firstVisibleIndex = parseInt(index);
                    }
                } else {
                    li.style.display = 'none';
                }
            });

            // Si hay resultados y el proyecto actual no es visible, cambiar al primer proyecto visible
            if (firstVisibleIndex !== -1) {
                const firstVisibleBtn = document.querySelector(`.project-btn[data-index="${firstVisibleIndex}"]`) as HTMLButtonElement;
                if (firstVisibleBtn && !firstVisibleBtn.classList.contains('text-green-400')) {
                    firstVisibleBtn.click();
                }
            }
        });
    }
</script>

