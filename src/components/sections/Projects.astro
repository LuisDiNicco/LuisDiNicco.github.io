---
// src/components/sections/Projects.astro
import { useTranslations } from '../../i18n';
import ProjectCard from '../ui/ProjectCard.astro';
import SectionTitle from '../ui/SectionTitle.astro';

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const project1Tags = ['NestJS', 'PostgreSQL', 'Docker'];
const project2Tags = ['Node.js', 'Redis', 'Socket.io'];
---

<section id="projects" class="scroll-mt-24 mb-24">
    
    <div class="mb-10">
        <SectionTitle number="03" title={t('proj.title')} />
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6"> <ProjectCard 
            title={t('proj.p1.title')}
            description={t('proj.p1.desc')}
            tags={project1Tags}
            linkText={t('proj.link')}
            linkUrl="https://github.com/LuisDiNicco"
        >
            <li class="flex items-start gap-2 text-xs text-gray-300"><span class="text-green-500 mt-0.5">›</span>{t('proj.p1.k1')}</li>
            <li class="flex items-start gap-2 text-xs text-gray-300"><span class="text-green-500 mt-0.5">›</span>{t('proj.p1.k2')}</li>
            <li class="flex items-start gap-2 text-xs text-gray-300"><span class="text-green-500 mt-0.5">›</span>{t('proj.p1.k3')}</li>
            <li class="flex items-start gap-2 text-xs text-gray-300"><span class="text-green-500 mt-0.5">›</span>{t('proj.p1.k4')}</li>
        </ProjectCard>

        <ProjectCard 
            title={t('proj.p2.title')}
            description={t('proj.p2.desc')}
            tags={project2Tags}
            linkText={t('proj.link')}
            linkUrl="https://github.com/LuisDiNicco"
        >
            <li class="flex items-start gap-2 text-xs text-gray-300"><span class="text-green-500 mt-0.5">›</span>{t('proj.p2.k1')}</li>
            <li class="flex items-start gap-2 text-xs text-gray-300"><span class="text-green-500 mt-0.5">›</span>{t('proj.p2.k2')}</li>
            <li class="flex items-start gap-2 text-xs text-gray-300"><span class="text-green-500 mt-0.5">›</span>{t('proj.p2.k3')}</li>
            <li class="flex items-start gap-2 text-xs text-gray-300"><span class="text-green-500 mt-0.5">›</span>{t('proj.p2.k4')}</li>
        </ProjectCard>

    </div>
</section>