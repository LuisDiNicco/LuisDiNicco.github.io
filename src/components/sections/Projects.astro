---
// src/components/sections/Projects.astro
import { useTranslations } from '../../i18n';
import SectionTitle from '../ui/SectionTitle.astro';
import { PROJECTS } from '../../data/projects'; // <--- Importamos los datos

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="projects" class="scroll-mt-24 mb-24">
    
    <div class="mb-10">
        <SectionTitle number="04" title={t('proj.title')} />
    </div>
    
    <div class="bg-[#0a0a0a] border border-gray-800 rounded-xl overflow-hidden shadow-2xl flex flex-col md:flex-row min-h-[500px]">
        
        <!-- Sidebar: File Explorer -->
        <div class="w-full md:w-1/3 bg-[#111] border-b md:border-b-0 md:border-r border-gray-800 flex flex-col">
            <div class="bg-[#1A1A1A] px-4 py-3 flex items-center gap-2 border-b border-gray-800">
                <div class="w-3 h-3 rounded-full bg-[#FF5F56]"></div>
                <div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
                <div class="w-3 h-3 rounded-full bg-[#27C93F]"></div>
                <span class="ml-2 text-xs text-gray-500 font-mono">~/projects</span>
            </div>
            
            <div class="p-4 flex-grow overflow-y-auto">
                <div class="text-green-500 font-mono text-sm mb-4">$ ls -l</div>
                <ul class="space-y-1 font-mono text-sm" id="project-list">
                    {PROJECTS.map((project, index) => (
                        <li>
                            <button 
                                class={`project-btn w-full text-left px-2 py-1.5 rounded flex items-center gap-2 transition-colors ${index === 0 ? 'bg-green-500/10 text-green-400' : 'text-gray-400 hover:bg-gray-800/50 hover:text-gray-200'}`}
                                data-index={index}
                            >
                                <svg class="w-4 h-4 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                <span class="truncate">{project.title.split('.').pop()?.toLowerCase().replace(/\s+/g, '-')}.sh</span>
                            </button>
                        </li>
                    ))}
                </ul>
            </div>
        </div>

        <!-- Main Content: Project Details -->
        <div class="w-full md:w-2/3 bg-[#050505] flex flex-col relative">
            <div class="absolute inset-0 pointer-events-none bg-[linear-gradient(transparent_50%,rgba(0,0,0,0.1)_50%)] bg-[length:100%_4px] opacity-20 z-0"></div>
            
            <div class="bg-[#0a0a0a] px-4 py-2 border-b border-gray-800 flex items-center justify-between z-10">
                <span class="text-xs text-gray-500 font-mono" id="project-cmd">$ cat {PROJECTS[0].title.split('.').pop()?.toLowerCase().replace(/\s+/g, '-')}.sh</span>
            </div>

            <div class="p-6 md:p-8 flex-grow overflow-y-auto z-10 relative" id="project-details">
                {PROJECTS.map((project, index) => (
                    <div class={`project-content ${index === 0 ? 'block' : 'hidden'} animate-fade-in`} data-index={index}>
                        <div class="flex items-start gap-3 mb-6">
                            <span class="text-green-500 font-mono mt-1">âžœ</span>
                            <h3 class="text-2xl font-bold text-gray-100 leading-tight font-mono">
                                {t(project.title)}
                            </h3>
                        </div>
                        
                        <p class="text-gray-400 text-base leading-relaxed mb-8 font-mono">
                            {t(project.description)}
                        </p>
                        
                        <div class="mb-8 bg-[#111] p-5 rounded border border-gray-800/60 font-mono text-sm relative overflow-hidden">
                            <div class="absolute top-0 left-0 w-1 h-full bg-green-500/50"></div>
                            <div class="text-gray-500 mb-3 select-none">/* {t('proj.keys')} */</div>
                            <ul class="space-y-3 text-gray-300">
                                {project.achievements.map((achievementKey) => (
                                    <li class="flex items-start gap-2">
                                        <span class="text-green-500 mt-0.5 opacity-70">~</span>
                                        {t(achievementKey)}
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <div class="flex flex-wrap gap-2 mb-8 font-mono">
                            {project.tags.map((tag) => (
                                <span class="px-2.5 py-1 bg-green-500/5 border border-green-500/20 text-green-400/80 rounded text-xs">
                                    --{tag.toLowerCase().replace(/\s+/g, '-')}
                                </span>
                            ))}
                        </div>

                        <div class="pt-6 border-t border-gray-800/50 flex flex-wrap gap-6 font-mono text-sm">
                            {project.demoUrl && project.demoText && (
                                <a href={project.demoUrl} target="_blank" class="text-gray-400 hover:text-green-400 transition-colors flex items-center gap-2 group/link">
                                    <span class="text-green-500/50 group-hover/link:text-green-500">./</span>{t(project.demoText).toLowerCase().replace(/\s+/g, '-')}
                                    <span class="opacity-0 group-hover/link:opacity-100 transition-opacity text-green-500 animate-pulse">_</span>
                                </a>
                            )}
                            <a href={project.linkUrl} target="_blank" class="text-gray-400 hover:text-green-400 transition-colors flex items-center gap-2 group/link">
                                <span class="text-green-500/50 group-hover/link:text-green-500">./</span>{t(project.linkText).toLowerCase().replace(/\s+/g, '-')}
                                <span class="opacity-0 group-hover/link:opacity-100 transition-opacity text-green-500 animate-pulse">_</span>
                            </a>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<script>
    const buttons = document.querySelectorAll('.project-btn');
    const contents = document.querySelectorAll('.project-content');
    const cmdText = document.getElementById('project-cmd');

    buttons.forEach(btn => {
        btn.addEventListener('click', () => {
            const index = btn.getAttribute('data-index');
            const fileName = btn.querySelector('span')?.textContent || 'script.sh';
            
            // Update buttons
            buttons.forEach(b => {
                b.classList.remove('bg-green-500/10', 'text-green-400');
                b.classList.add('text-gray-400');
            });
            btn.classList.remove('text-gray-400');
            btn.classList.add('bg-green-500/10', 'text-green-400');

            // Update command text
            if (cmdText) {
                cmdText.textContent = `$ cat ${fileName}`;
            }

            // Update content
            contents.forEach(content => {
                if (content.getAttribute('data-index') === index) {
                    content.classList.remove('hidden');
                    content.classList.add('block');
                } else {
                    content.classList.remove('block');
                    content.classList.add('hidden');
                }
            });
        });
    });
</script>