---
// src/components/sections/Projects.astro
import { useTranslations } from '../../i18n';
import SectionTitle from '../ui/SectionTitle.astro';
import { PROJECTS } from '../../data/projects'; // <--- Importamos los datos

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="projects" class="scroll-mt-24 mb-24">
    
    <div class="mb-10">
        <SectionTitle number="04" title={t('proj.title')} />
    </div>
    
    <div class="bg-[#0a0a0a] border border-gray-800 rounded-xl overflow-hidden shadow-2xl flex flex-col md:flex-row h-[450px] md:h-[380px]">
        
        <!-- Sidebar: File Explorer -->
        <div class="w-full md:w-1/4 bg-[#111] border-b md:border-b-0 md:border-r border-gray-800 flex flex-col h-48 md:h-full">
            <div class="bg-[#1A1A1A] px-4 py-3 flex items-center gap-2 border-b border-gray-800 shrink-0">
                <div class="w-3 h-3 rounded-full bg-[#FF5F56]"></div>
                <div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
                <div class="w-3 h-3 rounded-full bg-[#27C93F]"></div>
                <span class="ml-3 text-xs text-gray-500 opacity-70 font-mono">luis@dev:~/projects</span>
            </div>
            
            <div class="p-4 flex-grow overflow-y-auto custom-scrollbar">
                <div class="text-green-500 font-mono text-sm mb-4">$ ls -l</div>
                <ul class="space-y-1 font-mono text-sm" id="project-list">
                    {PROJECTS.map((project, index) => (
                        <li class="relative group/item">
                            <button 
                                class={`project-btn w-full text-left px-2 py-1.5 rounded flex items-center gap-2 transition-colors cursor-pointer ${index === 0 ? 'bg-green-500/10 text-green-400' : 'text-gray-400 hover:bg-gray-800/50 hover:text-gray-200'}`}
                                data-index={index}
                            >
                                <svg class="w-4 h-4 opacity-70 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                <span class="truncate">{project.title.split('.').pop()?.toLowerCase().replace(/\s+/g, '-')}.sh</span>
                            </button>
                        </li>
                    ))}
                </ul>
            </div>
        </div>

        <!-- Main Content: Project Summary -->
        <div class="w-full md:w-3/4 bg-[#050505] flex flex-col relative overflow-hidden h-full">
            <div class="absolute inset-0 pointer-events-none bg-[linear-gradient(transparent_50%,rgba(0,0,0,0.1)_50%)] bg-[length:100%_4px] opacity-20 z-0"></div>
            
            <div class="bg-[#0a0a0a] px-4 py-2 border-b border-gray-800 flex items-center justify-between z-10 shrink-0">
                <span class="text-xs text-gray-500 font-mono" id="project-cmd">$ cat {PROJECTS[0].title.split('.').pop()?.toLowerCase().replace(/\s+/g, '-')}.sh</span>
            </div>

            <div class="p-6 md:p-8 flex-grow z-10 relative overflow-hidden" id="project-details">
                {PROJECTS.map((project, index) => (
                    <div class={`project-content ${index === 0 ? 'flex' : 'hidden'} animate-fade-in h-full flex-col justify-between`} data-index={index}>
                        <div>
                            <div class="flex items-start gap-3 mb-4">
                                <span class="text-green-500 font-mono mt-1">➜</span>
                                <h3 class="text-xl md:text-2xl font-bold text-gray-100 leading-tight font-mono">
                                    {t(project.title)}
                                </h3>
                            </div>
                            
                            <p class="text-gray-400 text-sm md:text-base leading-relaxed mb-6 font-mono line-clamp-3">
                                {t(project.description)}
                            </p>

                            <div class="flex flex-wrap gap-2 mb-6 font-mono">
                                {project.tags.map((tag) => (
                                    <span class="px-2 py-1 bg-green-500/5 border border-green-500/20 text-green-400/80 rounded text-[10px] md:text-xs">
                                        --{tag.toLowerCase().replace(/\s+/g, '-')}
                                    </span>
                                ))}
                            </div>
                        </div>

                        <div class="pt-4 border-t border-gray-800/50 flex flex-wrap items-center justify-between gap-4 font-mono text-sm mt-auto">
                            <div class="flex gap-4">
                                {project.demoUrl && project.demoText && (
                                    <a href={project.demoUrl} target="_blank" class="text-gray-400 hover:text-green-400 transition-colors flex items-center gap-2 group/link cursor-pointer">
                                        <span class="text-green-500/50 group-hover/link:text-green-500">./</span>{t(project.demoText).toLowerCase().replace(/\s+/g, '-')}
                                        <span class="opacity-0 group-hover/link:opacity-100 transition-opacity text-green-500 animate-pulse">_</span>
                                    </a>
                                )}
                                <a href={project.linkUrl} target="_blank" class="text-gray-400 hover:text-green-400 transition-colors flex items-center gap-2 group/link cursor-pointer">
                                    <span class="text-green-500/50 group-hover/link:text-green-500">./</span>{t(project.linkText).toLowerCase().replace(/\s+/g, '-')}
                                    <span class="opacity-0 group-hover/link:opacity-100 transition-opacity text-green-500 animate-pulse">_</span>
                                </a>
                            </div>
                            
                            <button class="expand-btn text-green-400 hover:text-green-300 hover:bg-green-500/10 px-3 py-1.5 rounded border border-green-500/30 transition-colors flex items-center gap-2 cursor-pointer" data-index={index}>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path></svg>
                                <span>./details.sh</span>
                            </button>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<!-- Modal -->
<div id="project-modal" class="fixed inset-0 z-50 hidden items-center justify-center p-4 sm:p-6">
    <div class="absolute inset-0 bg-black/80 backdrop-blur-sm modal-backdrop cursor-pointer"></div>
    
    <div class="bg-[#0a0a0a] border border-gray-800 rounded-xl shadow-2xl w-full max-w-5xl max-h-[90vh] flex flex-col relative z-10 overflow-hidden transform scale-95 opacity-0 transition-all duration-300" id="modal-content-container">
        
        <!-- Modal Header with Tabs -->
        <div class="bg-[#1A1A1A] flex flex-col border-b border-gray-800 shrink-0">
            <div class="px-4 py-3 flex items-center justify-between">
                <div class="flex items-center gap-2">
                    <div class="w-3 h-3 rounded-full bg-[#FF5F56] cursor-pointer modal-close hover:opacity-80"></div>
                    <div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
                    <div class="w-3 h-3 rounded-full bg-[#27C93F]"></div>
                    <span class="ml-3 text-xs text-gray-500 font-mono hidden sm:inline-block">~/project-details</span>
                </div>
                <button class="text-gray-500 hover:text-white modal-close cursor-pointer transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
            <!-- Tabs -->
            <div class="flex overflow-x-auto custom-scrollbar px-2 gap-1 pt-1">
                {PROJECTS.map((project, index) => (
                    <button 
                        class={`modal-tab px-4 py-2 text-xs sm:text-sm font-mono rounded-t-md border-t border-x transition-colors whitespace-nowrap cursor-pointer ${index === 0 ? 'bg-[#0a0a0a] border-gray-800 text-green-400' : 'bg-transparent border-transparent text-gray-500 hover:bg-[#111] hover:text-gray-300'}`} 
                        data-modal-tab={index}
                    >
                        {project.title.split('.').pop()?.toLowerCase().replace(/\s+/g, '-')}.sh
                    </button>
                ))}
            </div>
        </div>

        <!-- Modal Body -->
        <div class="p-6 md:p-8 overflow-y-auto custom-scrollbar flex-grow relative bg-[#050505]">
            <div class="absolute inset-0 pointer-events-none bg-[linear-gradient(transparent_50%,rgba(0,0,0,0.1)_50%)] bg-[length:100%_4px] opacity-20 z-0"></div>
            
            {PROJECTS.map((project, index) => (
                <div class={`modal-project-content ${index === 0 ? 'block' : 'hidden'} animate-fade-in relative z-10`} data-modal-index={index}>
                    <div class="flex flex-col lg:flex-row gap-8">
                        
                        <!-- Left Column: Text Content -->
                        <div class="flex-1 space-y-8">
                            <div>
                                <h3 class="text-2xl md:text-3xl font-bold text-gray-100 mb-3 font-mono flex items-center gap-3">
                                    <span class="text-green-500">➜</span>
                                    {t(project.title)}
                                </h3>
                                <p class="text-gray-400 text-base font-mono leading-relaxed">{t(project.description)}</p>
                            </div>

                            <!-- Context & Challenge -->
                            <div class="space-y-3">
                                <h4 class="text-green-400 font-mono text-sm flex items-center gap-2 uppercase tracking-wider">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                    {t('proj.problem')}
                                </h4>
                                <p class="text-gray-300 text-sm leading-relaxed font-mono bg-[#111] p-4 rounded-lg border border-gray-800/50 shadow-inner">
                                    {t(project.problem)}
                                </p>
                            </div>

                            <!-- Solution -->
                            <div class="space-y-3">
                                <h4 class="text-green-400 font-mono text-sm flex items-center gap-2 uppercase tracking-wider">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                    {t('proj.solution')}
                                </h4>
                                <p class="text-gray-300 text-sm leading-relaxed font-mono bg-[#111] p-4 rounded-lg border border-gray-800/50 shadow-inner">
                                    {t(project.solution)}
                                </p>
                            </div>

                            <!-- Key Achievements -->
                            <div class="space-y-3">
                                <h4 class="text-green-400 font-mono text-sm flex items-center gap-2 uppercase tracking-wider">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path></svg>
                                    {t('proj.keys')}
                                </h4>
                                <ul class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-gray-300 font-mono text-sm">
                                    {project.achievements.map((achievementKey) => (
                                        <li class="flex items-start gap-3 bg-[#111] p-3 rounded-lg border border-gray-800/50 hover:border-green-500/30 transition-colors group/item">
                                            <span class="text-green-500 mt-0.5 group-hover/item:animate-pulse">~</span>
                                            <span>{t(achievementKey)}</span>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </div>

                        <!-- Right Column: Image, Stack, Links -->
                        <div class="w-full lg:w-1/3 flex flex-col gap-6">
                            <!-- Image -->
                            <div class="bg-[#111] border border-gray-800 rounded-lg overflow-hidden relative group/img shadow-lg">
                                {project.image ? (
                                    <>
                                        <img src={project.image} alt={t(project.title)} loading="lazy" class="w-full h-auto object-cover opacity-80 group-hover/img:opacity-100 transition-opacity duration-500" />
                                        <div class="absolute inset-0 bg-green-500/10 group-hover/img:bg-transparent transition-colors duration-500 pointer-events-none"></div>
                                    </>
                                ) : (
                                    <div class="h-48 flex items-center justify-center text-gray-600 font-mono text-xs">[Image Placeholder]</div>
                                )}
                            </div>

                            <!-- Tech Stack -->
                            <div class="bg-[#111] p-5 rounded-lg border border-gray-800/50 shadow-inner">
                                <h4 class="text-gray-400 font-mono text-xs mb-4 uppercase tracking-wider flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>
                                    {t('proj.stack')}
                                </h4>
                                <div class="flex flex-wrap gap-2 font-mono">
                                    {project.tags.map((tag) => (
                                        <span class="px-2.5 py-1 bg-green-500/5 border border-green-500/20 text-green-400 rounded text-xs hover:bg-green-500/10 transition-colors cursor-default">
                                            {tag}
                                        </span>
                                    ))}
                                </div>
                            </div>
                            
                            <!-- Links -->
                            <div class="flex flex-col gap-3 font-mono text-sm mt-auto">
                                {project.demoUrl && project.demoText && (
                                    <a href={project.demoUrl} target="_blank" class="bg-green-500/10 hover:bg-green-500/20 text-green-400 border border-green-500/30 px-4 py-3 rounded-lg text-center transition-all flex items-center justify-center gap-2 hover:scale-[1.02] shadow-lg shadow-green-500/5">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                                        {t(project.demoText)}
                                    </a>
                                )}
                                <a href={project.linkUrl} target="_blank" class="bg-[#111] hover:bg-[#1a1a1a] text-gray-300 border border-gray-800 px-4 py-3 rounded-lg text-center transition-all flex items-center justify-center gap-2 hover:scale-[1.02] hover:text-white">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>
                                    {t(project.linkText)}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</div>

<script>
    const buttons = document.querySelectorAll('.project-btn');
    const contents = document.querySelectorAll('.project-content');
    const cmdText = document.getElementById('project-cmd');
    
    // Modal elements
    const expandBtns = document.querySelectorAll('.expand-btn');
    const modal = document.getElementById('project-modal');
    const modalContainer = document.getElementById('modal-content-container');
    const closeBtns = document.querySelectorAll('.modal-close');
    const modalBackdrop = document.querySelector('.modal-backdrop');
    const modalContents = document.querySelectorAll('.modal-project-content');
    const modalTabs = document.querySelectorAll('.modal-tab');

    // Tab switching logic (Main View)
    buttons.forEach(btn => {
        btn.addEventListener('click', () => {
            const index = btn.getAttribute('data-index');
            const fileName = btn.querySelector('span')?.textContent || 'script.sh';
            
            // Update buttons
            buttons.forEach(b => {
                b.classList.remove('bg-green-500/10', 'text-green-400');
                b.classList.add('text-gray-400');
            });
            btn.classList.remove('text-gray-400');
            btn.classList.add('bg-green-500/10', 'text-green-400');

            // Update command text
            if (cmdText) {
                cmdText.textContent = `$ cat ${fileName}`;
            }

            // Update content
            contents.forEach(content => {
                if (content.getAttribute('data-index') === index) {
                    content.classList.remove('hidden');
                    content.classList.add('flex');
                } else {
                    content.classList.remove('flex');
                    content.classList.add('hidden');
                }
            });
        });
    });

    // Modal Tab switching logic
    const switchModalTab = (index: string | null) => {
        if (!index) return;

        // Update tabs
        modalTabs.forEach(tab => {
            if (tab.getAttribute('data-modal-tab') === index) {
                tab.classList.remove('bg-transparent', 'border-transparent', 'text-gray-500');
                tab.classList.add('bg-[#0a0a0a]', 'border-gray-800', 'text-green-400');
            } else {
                tab.classList.remove('bg-[#0a0a0a]', 'border-gray-800', 'text-green-400');
                tab.classList.add('bg-transparent', 'border-transparent', 'text-gray-500');
            }
        });

        // Update content
        modalContents.forEach(content => {
            if (content.getAttribute('data-modal-index') === index) {
                content.classList.remove('hidden');
                content.classList.add('block');
            } else {
                content.classList.remove('block');
                content.classList.add('hidden');
            }
        });
    };

    modalTabs.forEach(tab => {
        tab.addEventListener('click', () => {
            switchModalTab(tab.getAttribute('data-modal-tab'));
        });
    });

    // Modal logic
    const openModal = (index: string | null) => {
        if (!modal || !modalContainer || !index) return;
        
        switchModalTab(index);

        // Show modal with animation
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        // Small delay to allow display:flex to apply before animating opacity/transform
        setTimeout(() => {
            modalContainer.classList.remove('scale-95', 'opacity-0');
            modalContainer.classList.add('scale-100', 'opacity-100');
        }, 10);
        
        // Prevent body scroll
        document.body.style.overflow = 'hidden';
    };

    const closeModal = () => {
        if (!modal || !modalContainer) return;
        
        // Hide with animation
        modalContainer.classList.remove('scale-100', 'opacity-100');
        modalContainer.classList.add('scale-95', 'opacity-0');
        
        setTimeout(() => {
            modal.classList.remove('flex');
            modal.classList.add('hidden');
            // Restore body scroll
            document.body.style.overflow = '';
        }, 300);
    };

    expandBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            openModal(btn.getAttribute('data-index'));
        });
    });

    closeBtns.forEach(btn => {
        btn.addEventListener('click', closeModal);
    });

    if (modalBackdrop) {
        modalBackdrop.addEventListener('click', closeModal);
    }

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
            closeModal();
        }
    });
</script>

<style>
    /* Custom Scrollbar for Project Details */
    .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
    }
    .custom-scrollbar::-webkit-scrollbar-track {
        background: #050505;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #1A1A1A;
        border-radius: 10px;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: #22c55e;
    }
</style>