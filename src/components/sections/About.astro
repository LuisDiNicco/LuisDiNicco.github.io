---
// src/components/sections/About.astro
import { useTranslations } from '../../i18n';
import SectionTitle from '../ui/SectionTitle.astro'; // <-- IMPORTAR

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="about-me" class="scroll-mt-24 mb-32"> 
    
    <SectionTitle number="01" title={t('about.title').replace('// 01. ', '')} />

    <div class="bg-[#111111] border border-gray-800 rounded-xl overflow-hidden shadow-xl hover:border-gray-600 transition duration-300">
        <div class="bg-[#1A1A1A] px-4 py-3 flex items-center gap-2 border-b border-gray-800">
            <div class="w-3 h-3 rounded-full bg-[#FF5F56]"></div>
            <div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
            <div class="w-3 h-3 rounded-full bg-[#27C93F]"></div>
            <span class="ml-2 text-xs text-gray-500">bash -- 80x24</span>
        </div>

        <div class="p-6 md:p-10 font-mono">
            <div class="flex items-center gap-2 mb-8 text-green-500 text-base md:text-lg border-b border-gray-800 pb-4 min-h-[3rem]">
                <span class="font-bold">$</span>
                <span id="typewriter-text"></span><span id="cursor" class="cursor-blink bg-green-500 w-2.5 h-5 inline-block align-middle"></span>
            </div>

            <div id="about-content" class="text-gray-300 leading-relaxed text-sm md:text-base space-y-6 opacity-0 transition-opacity duration-700">
                <p set:html={t('about.p1')} />
                <p set:html={t('about.p2')} />
                <p set:html={t('about.p3')} />
            </div>
        </div>
    </div>
</section>

<script>
    import { initTypewriter } from '../../scripts/typing';
    document.addEventListener('DOMContentLoaded', initTypewriter);
</script>