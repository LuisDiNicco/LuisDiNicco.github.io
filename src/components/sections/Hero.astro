---
// src/components/sections/Hero.astro
import { useTranslations } from '../../i18n';

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<header id="home" class="min-h-screen flex flex-col justify-center items-center relative pt-20 pb-60 scroll-mt-20 gap-8 md:gap-12">
            
    <div class="bg-[#111111] border border-gray-800 rounded-xl overflow-hidden shadow-2xl animate-fade-in-up w-full relative z-20 max-w-4xl hover:border-gray-600 transition duration-300">
        <div class="bg-[#1A1A1A] px-4 py-3 flex items-center gap-2 border-b border-gray-800">
            <div class="w-3 h-3 rounded-full bg-[#FF5F56]"></div>
            <div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
            <div class="w-3 h-3 rounded-full bg-[#27C93F]"></div>
            <span class="ml-3 text-xs text-gray-500 opacity-70">luis@dev:~/portfolio</span>
        </div>
        
        <div class="p-8 md:p-10 space-y-8">
            <div>
                <p class="text-green-500 font-bold mb-2">{t('hero.cmd')}</p>
                <h1 class="text-5xl md:text-6xl font-bold text-gray-100 mb-2 tracking-tight">Luis Di Nicco</h1>
                <p class="text-gray-400 text-xl font-medium">
                    {t('hero.role')}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pt-4 border-t border-gray-800/50">
                
                <div>
                    <p class="text-green-500 font-bold mb-2 text-sm">{t('hero.status.cmd')}</p>
                    <div class="flex items-center gap-2 text-gray-300">
                        <div class="w-2.5 h-2.5 rounded-full bg-green-500 animate-pulse"></div>
                        <span>{t('hero.status.text')}</span>
                    </div>
                    <div class="flex items-center gap-2 text-gray-400 text-sm mt-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        <span>Buenos Aires, AR</span>
                    </div>
                </div>

                <div>
                    <p class="text-green-500 font-bold mb-2 text-sm">{t('hero.stack.cmd')}</p>
                    <div class="flex gap-2 text-sm text-gray-300 font-mono">
                        <span class="bg-[#1A1A1A] px-2 py-1 rounded border border-gray-800 hover:border-green-500 hover:text-green-400 transition-colors cursor-default">NestJS</span>
                        <span class="text-gray-600">+</span>
                        <span class="bg-[#1A1A1A] px-2 py-1 rounded border border-gray-800 hover:border-green-500 hover:text-green-400 transition-colors cursor-default">TypeScript</span>
                        <span class="text-gray-600">+</span>
                        <span class="bg-[#1A1A1A] px-2 py-1 rounded border border-gray-800 hover:border-green-500 hover:text-green-400 transition-colors cursor-default">Docker</span>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="flex justify-center z-20">
        <a href="#about-me" class="group flex flex-col items-center gap-3 cursor-pointer opacity-80 hover:opacity-100 transition-all hover:scale-105">
            <div class="px-5 py-2.5 bg-[#111] border border-green-500/30 rounded-lg text-sm text-green-400 font-mono shadow-[0_0_15px_rgba(34,197,94,0.1)] group-hover:shadow-[0_0_25px_rgba(34,197,94,0.2)] group-hover:border-green-500 transition-all">
                $ npm run start<span class="cursor-blink bg-green-500 w-2 h-4 inline-block align-middle ml-2"></span>
            </div>
        </a>
    </div>
</header>