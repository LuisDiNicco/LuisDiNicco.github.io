---
import { useTranslations } from '../../i18n';
import SectionTitle from '../ui/SectionTitle.astro';

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="experience" class="scroll-mt-24 mb-24">
    <SectionTitle number="02" title={t('exp.title')} />

    <div class="bg-[#111111] border border-gray-800 rounded-xl overflow-hidden shadow-xl hover:border-gray-600 transition duration-300">
        <div class="bg-[#1A1A1A] px-4 py-3 flex items-center gap-2 border-b border-gray-800">
            <div class="w-3 h-3 rounded-full bg-[#FF5F56]"></div>
            <div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
            <div class="w-3 h-3 rounded-full bg-[#27C93F]"></div>
            <span class="ml-2 text-xs text-gray-500 font-mono">{t('exp.cmd')}</span>
        </div>

        <div class="p-6 md:p-8">
            <div class="relative border-l-2 border-green-500/30 pl-6 md:pl-8 space-y-10">
                
                <!-- Job 1 -->
                <div class="relative group">
                    <!-- Timeline Dot -->
                    <div class="absolute -left-[1.65rem] md:-left-[2.15rem] top-1.5 w-4 h-4 bg-[#111] border-2 border-green-500 rounded-full group-hover:bg-green-500 transition-colors duration-300 shadow-[0_0_10px_rgba(34,197,94,0.5)]"></div>
                    
                    <div class="flex flex-col md:flex-row md:items-center justify-between mb-2 gap-2">
                        <h3 class="text-xl font-bold text-white group-hover:text-green-400 transition-colors">{t('exp.job1.title')}</h3>
                        <span class="text-sm font-mono text-green-500/80 bg-green-500/10 px-3 py-1 rounded-full border border-green-500/20 w-fit">
                            {t('exp.job1.date')}
                        </span>
                    </div>
                    
                    <div class="text-lg text-gray-300 font-medium mb-3 flex items-center gap-2">
                        <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                        {t('exp.job1.company')}
                    </div>
                    
                    <p class="text-gray-400 text-sm md:text-base leading-relaxed mb-4">
                        {t('exp.job1.desc')}
                    </p>
                    
                    <div class="flex flex-wrap gap-2">
                        {['Node.js', 'TypeScript', 'SQL', 'REST APIs'].map(tech => (
                            <span class="px-2.5 py-1 bg-[#1A1A1A] border border-gray-700 text-gray-300 rounded text-xs font-mono hover:border-green-500/50 hover:text-green-400 transition-colors cursor-default">
                                {tech}
                            </span>
                        ))}
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
