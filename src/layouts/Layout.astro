---
// src/layouts/Layout.astro
import '../styles/base.css';

interface Props {
  title: string;
  description: string;
  lang: 'es' | 'en';
  image?: string; // Opcional: permite cambiar la imagen por página si quisieras
}

const { title, description, lang, image = '/og-image.png' } = Astro.props;

// Calculamos URLs absolutas (Vital para SEO y Social Cards)
// Si Astro.site no está definido, usamos un fallback para evitar errores en dev
const siteUrl = Astro.site ? Astro.site.href : 'https://LuisDiNicco.github.io/';
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const socialImageURL = new URL(image, siteUrl);
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="canonical" href={canonicalURL} />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Luis Di Nicco" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Analytics (Plausible - Privacy Friendly) -->
    <script defer data-domain="luisdinicco.github.io" src="https://plausible.io/js/script.js"></script>

    <!-- Error Tracking (Sentry Placeholder) -->
    <!-- <script src="https://js.sentry-cdn.com/YOUR_SENTRY_KEY.min.js" crossorigin="anonymous"></script> -->
  </head>
  <body class="relative bg-[#0a0a0a]"> <canvas id="grid-canvas" class="fixed inset-0 pointer-events-none z-0"></canvas>
    
    <div class="fixed inset-0 z-0 bg-[radial-gradient(circle_at_center,transparent_0%,#0a0a0a_100%)] pointer-events-none opacity-80"></div>

    <div class="relative z-10">
      <slot />
    </div>

    <script>
      import { initMatrixBg } from '../scripts/matrix.ts';
      // Ejecutamos la función cuando el DOM esté listo
      initMatrixBg();
    </script>
  </body>
</html>